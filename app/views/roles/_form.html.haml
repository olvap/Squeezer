- form_for(@role) do |f| 
  .ui-widget.ui-widget-content
    - if @role.errors.any? 
      #error_explanation
        %h2="#{pluralize(@role.errors.count, 'error')} prohibited this entry from being saved:"
  
        %ul
          - @role.errors.full_messages.each do |msg| 
            %li= msg 
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.submit 'Create'
