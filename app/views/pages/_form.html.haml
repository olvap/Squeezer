- form_for @page do |f|
  .ui-widget.ui-widget-content
    - if @page.errors.any? 
      #error_explanation
        %h2="#{pluralize(@page.errors.count, 'error')} prohibited this entry from being saved:"
  
        %ul
          - @page.errors.full_messages.each do |msg| 
            %li= msg 
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :menu
    %br
    = f.text_field :menu
  %p
    = f.label :body
    %br
    = f.text_area(:body,:class=>'wysiwyg')
    = wysiwug
  %p
    = f.submit
