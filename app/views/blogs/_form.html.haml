= form_for @blog do |f|
  .ui-widget.ui-widget-content
    - if @blog.errors.any? 
      #error_explanation
        %h2="#{pluralize(@blog.errors.count, 'error')} prohibited this entry from being saved:"
  
        %ul
          - @blog.errors.full_messages.each do |msg| 
            %li= msg 
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :body
    %br
    = f.text_area(:body,:class=>'wysiwyg')
    = wysiwug
  %p
    = f.file_field :image 
  %p
    = f.submit
